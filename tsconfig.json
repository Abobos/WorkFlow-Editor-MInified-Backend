{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es5", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": "",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
